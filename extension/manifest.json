{
  "manifest_version": 2,

  "name": "Current song",
  "description": "Shares the currently playing song to the outside world",
  "version": "0.1",

  "permissions": ["nativeMessaging"],

  "background": {
    "scripts": [
      "third_party/jquery-3.1.0.slim.js",
      "core/api.js",
      "core/engine.js",
      "core/native.js",
      "core/types.js",
      "background/main.js"
    ]
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "commands": {
    "play_pause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Play/Pause",
      "global": true
    },
    "next_song": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Next Song",
      "global": true
    },
    "prev_song": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Previous Song",
      "global": true
    }
  },

  "content_scripts": [
    {
      "matches": ["*://play.google.com/music/*"],
      "js": [
        "third_party/jquery-3.1.0.slim.js",
        "core/adapter.js",
        "core/types.js",
        "core/listener.js",
        "adapters/gpm.js"
      ]
    },
    {
      "matches": ["*://*.soundcloud.com/*"],
      "js": [
        "third_party/jquery-3.1.0.slim.js",
        "core/adapter.js",
        "core/listener.js",
        "adapters/soundcloud.js"
      ]
    }
  ]
}
