{
  "manifest_version": 2,

  "name": "Current song",
  "description": "Shares the currently playing song to the outside world",
  "version": "0.1",

  "permissions": ["nativeMessaging"],

  "background": {
    "scripts": [
      "third_party/jquery-3.1.0.slim.js",
      "third_party/require.js",
      "core/api.js",
      "core/engine.js",
      "core/native.js",
      "background/main.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://play.google.com/music/*"],
      "js": [
        "third_party/jquery-3.1.0.slim.js",
        "third_party/require.js",
        "core/adapter.js",
        "core/listener.js",
        "adapters/gpm.js"
      ]
    }
  ]
}
