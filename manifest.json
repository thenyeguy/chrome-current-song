{
  "manifest_version": 2,

  "name": "Current song",
  "description": "Shares the currently playing song to the outside world",
  "version": "0.1.1",

  "permissions": [
    "https://ws.audioscrobbler.com/*",
    "nativeMessaging",
    "storage"
  ],

  "commands": {
    "play_pause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Play/Pause",
      "global": true
    },
    "next_song": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Next Song",
      "global": true
    },
    "prev_song": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Previous Song",
      "global": true
    }
  }
}
